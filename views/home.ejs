<% layout('/layouts/boilerplate') -%>

<div class="container my-5">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% for (let list of allListings) { %>
      <div class="col">
        <a href="/listings/<%= list._id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm border-0 transition-hover">
            <% if (list.image && list.image.url) { %>
              <img 
                src="<%= list.image.url %>" 
                class="card-img-top" 
                alt="<%= list.title %>" 
                style="object-fit: cover; height: 15rem;" 
              >
            <% } else { %>
              <div class="bg-light d-flex align-items-center justify-content-center" style="height: 15rem;">
                <span class="text-muted">No image available</span>
              </div>
            <% } %>

            <div class="card-body p-3 pb-2">
              <h5 class="card-title mb-2"><%= list.title %></h5>
              <p class="card-text text-muted mb-2">
                <%= list.description ? list.description.substring(0, 80) + '...' : '' %>
              </p>
              <p class="card-text text-success fw-bold mb-0">
                &#8377; <%= list.price.toLocaleString("en-IN") %>/night
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>


