<% layout('/layouts/boilerplate') -%>

<body>
  <h1>Edit a Listing</h1>
  <form action="/listing/update/<%= readlisting._id %>?_method=PUT" method="POST">
    <label>Title:</label><br>
    <input type="text" name="listing[title]" value="<%= readlisting.title %>" required><br><br>

    <label>Description:</label><br>
    <textarea  name="listing[description]"  required><%= readlisting.description %></textarea><br><br>

    <label>Image URL:</label><br>
    <input type="text" value="<%= readlisting.image.url %>"  name="listing[image[url]]" ><br><br>

    <label>Price:</label><br>
    <input type="number" name="listing[price]" value="<%= readlisting.price %>" required><br><br>

    <label>Location:</label><br>
    <input type="text" name="listing[location]"value="<%= readlisting.location %>" required><br><br>

    <label>Country:</label><br>
    <input type="text" name="listing[country]"value="<%= readlisting.country %>" required><br><br>

    <button type="submit">Update Listing</button>
  </form>
</body>
